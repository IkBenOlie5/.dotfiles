{
  //python
  "[python]": {
    "editor.defaultFormatter": "ms-python.python",
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },
  "python.formatting.provider": "black",
  "python.formatting.blackArgs": ["--line-length=119"],
  "python.sortImports.args": ["--profile=black"],
  "python.pythonPath": "/usr/local/bin/python3",
  "workbench.editor.untitled.hint": "hidden",
  "python.defaultInterpreterPath": "/usr/local/bin/python3",
  "python.linting.mypyEnabled": true,
  "python.linting.lintOnSave": true,
  //"python.linting.pylintEnabled": false,
  //"python.linting.flake8Enabled": false,
  //"python.linting.pydocstyleEnabled": false,
  //"python.linting.pycodestyleEnabled": false,
  //"python.linting.prospectorEnabled": false,
  //"python.linting.pylamaEnabled": false,
  //"python.linting.banditEnabled": false,
  "python.linting.pycodestyleArgs": ["--ignore=E501"],
  "python.linting.flake8Args": ["--ignore=E501"],
  "python.linting.pylamaArgs": ["--ignore=E501"],
  "python.linting.mypyArgs": [
    "--ignore-missing-imports",
    "--follow-imports=silent",
    "--show-column-numbers"
  ],
  "python.analysis.completeFunctionParens": true,
  "python.languageServer": "Pylance",
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter.notebook.ipynb"
  },
  "kite.showWelcomeNotificationOnStartup": false,
  "files.associations": {
    "**/*.html": "html",
    "**/templates/**/*.html": "django-html",
    "**/templates/**/*": "django-txt",
    "**/requirements{/**,*}.{txt,in}": "pip-requirements"
  },
  "emmet.includeLanguages": {
    "django-html": "html"
  },
  //other
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "workbench.iconTheme": "material-icon-theme",
  "editor.formatOnSave": true,
  "terminal.integrated.fontFamily": "monospace",
  "liveServer.settings.donotShowInfoMsg": true,
  "editor.suggest.showStatusBar": true,
  "editor.fontLigatures": true,
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "terminal.external.osxExec": "Iterm2.app",
  "editor.fontFamily": "JetBrainsMono Nerd Font",
  "workbench.colorTheme": "Dracula",
  "editor.largeFileOptimizations": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  //html
  "html.format.unformatted": "",
  //golang
  "go.formatTool": "gofumpt",
  "gopls": {
    "formatting.gofumpt": true
  },
  "go.toolsManagement.autoUpdate": true,

  "trailing-spaces.trimOnSave": true,
  "editor.inlayHints.fontFamily": "JetBrainsMono Nerd Font",
  "editor.codeLensFontFamily": "JetBrainsMono Nerd Font",
  "markdown.preview.fontFamily": "JetBrainsMono Nerd Font",
  "security.workspace.trust.untrustedFiles": "open"
}
